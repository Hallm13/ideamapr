.row.idea-card-row
  .idea-image
    %image{src: '<%- image_url %>'.html_safe}
  .idea-title.col-xs-12
    <%- title %>
  .idea-description.col-xs-12
    %span.summary.wrapper
      %span
        <%- desc_summary %>
      %span.moreless-text{'data-switch-to' => 'full'}
        = precede '...' do
          = t('idea.card_more')
    %span.full.wrapper
      %span
        <%- description %>
      %span.moreless-text{'data-switch-to' => 'summary'}
        = precede '...' do
          = t('idea.card_less')

