.row
  - if @survey
    .text-center
      Adding Questions to Survey #{@survey.title}
  - else
    %button.btn.btn-primary
      = link_to t(:add_button_text), edit_survey_question_url(id: 0)

.entity-set
  .row.table-headers
    .col-xs-8
      Question Title
    .col-xs-2
      Question Type
    .col-xs-2
      Actions
      
- @questions.each do |question|
  .row.question-row{class: hide_by_contained(question, @survey)}
    .col-xs-8
      .cell-1
        = question.title
    .col-xs-2
      .cell-1
        = SurveyQuestion::QuestionType.name(question.question_type) || 'Not set'
    .col-xs-2
      = edit_or_select(question)

- if @survey
  %button.btn.btn-primary#add-multi-select
    Finish
