.row.table-headers
  .col-xs-6
    Question Title
  .col-xs-2
    Question Type
  .col-xs-4
      
- @questions.each do |question|
  .row.question-row
    .col-xs-8
      .cell-1
        = question.title
    .col-xs-2
      .cell-1
        = SurveyQuestion::QuestionType.name(question.question_type) || 'Not set'
    .col-xs-2
      = edit_or_select(question)

- if @survey
  %button.btn.btn-primary#add-multi-select
    Add To Survey
