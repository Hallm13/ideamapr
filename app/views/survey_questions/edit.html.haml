.row
  .col-xs-12
    - if @question.id.nil? 
      Create Question
    - else
      .page-title
        = "Edit Question: #{@question.title}"
  
= form_tag("/survey_questions/#{@question.id || '0'}", method: :post, id: :container_update) do
  = hidden_field_tag '_method', 'put'        
  = hidden_field_tag :redirect, '', id: :redirect
  = hidden_field_tag :survey_question_id, @question.id

  = render partial: 'add_title', layout: 'builder_box', locals: {build_box_title: 'Survey Title', box_index: 1, box_key: 'sq-title'}
  = render partial: 'add_question_type', layout: 'builder_box', locals: {build_box_title: 'Set Question Type', box_index: 2, box_key: 'sq-question-type'}
  = render partial: 'question_prompt', layout: 'builder_box', locals: {build_box_title: 'Write An Explanation Prompt', box_index: 3, box_key: 'sq-question-prompt'}
  = render partial: 'add_ideas', layout: 'builder_box', locals: {build_box_title: 'Add Ideas', box_index: 4, box_key: 'sq-add-ideas'}
  = submit_tag 'Save', class: 'btn btn-primary'
