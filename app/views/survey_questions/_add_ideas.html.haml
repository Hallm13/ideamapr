.row
  - @qn_ideas&.each do |idea|
    .question-box
      = hidden_field_tag 'survey_question[ideas][]', idea.id
      .col-xs-8.col-xs-offset-2.cell-1
        = idea.title
      .col-xs-2.delete-box
        .fa.fa-trash-o
  .col-xs-offset-3.col-xs-6
    %button.btn.btn-primary#select-contained
      + Select an Idea


