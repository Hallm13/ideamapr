.row
  .col-xs-12
    - if @idea.id.nil? 
      Create Idea
    - else
      .page-title
        = "Edit Idea: #{@idea.title}"

= form_tag("/ideas/#{@idea.id || '0'}", method: :post) do
  = hidden_field_tag '_method', 'put'        
  - @idea.viewbox_list.each_with_index do |vb, idx|
    = render partial: vb.partial_name, layout: 'builder_box', locals: {is_hidden: !vb.shown, build_box_title: vb.title, box_index: idx, box_key: vb.box_key}
  = submit_tag 'Save', class: 'btn btn-primary'

